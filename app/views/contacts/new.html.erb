<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">

  <h1>Contact Us</h1>
  <%= form_tag 'create', id: 'contact-form', class: 'full-width-form' do |f| %>
   <div class="form-group">
     <label for="">Your name</label>
    <%= text_field_tag 'contact[name]' %>
  </div>
  <div class="form-group">
  <label for="">Subject</label>
    <%= text_field_tag 'contact[subject]' %>
  </div>
  <div class="form-group">
    <label for="">Your message</label>
    <%= text_area_tag 'contact[text]', nil, {class: 'form-control', rows: 5} %>
  </div>
    <div class="form-actions">
      <%= button_to 'Contact us', 'Send message', :class=> "btn btn-primary", id: 'contact-button' %>
    </div>
  <% end %>
  </div>
  </div>
</div>
